# Configurações do Sistema de Gestão de Férias - RPONTES
# Sistema de Gestão de Pessoas

# Configurações do Banco de Dados PostgreSQL (Supabase)
SUPABASE_URL=sua_url_supabase_aqui
SUPABASE_KEY=sua_chave_supabase_aqui
DATABASE_URL=postgresql://usuario:senha@host:porta/database

# Configurações de Segurança
SECRET_KEY=sua_chave_secreta_aqui
ADMIN_EMAIL=admin@rpontes.com
ADMIN_PASSWORD=sua_senha_admin_aqui

# Configurações da Aplicação
APP_TITLE=RPONTES - Gestão de Pessoas
DEBUG_MODE=False
STREAMLIT_SHARING=True

# Exemplo de configuração completa para Supabase:
# DATABASE_URL=postgresql://postgres.abc123:senha%40especial@aws-0-us-east-1.pooler.supabase.com:6543/postgres
# Nota: Use %40 para @ e outros caracteres especiais na URL